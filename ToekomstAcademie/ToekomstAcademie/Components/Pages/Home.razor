@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
Welcome to your new app.

@if (testNum == 1)
{
    <p>Num is 1</p>
}
else
{
    <p>Num is not 1</p>
}

@for (int i = 0; i < 10; i++)
{
    <p>Value is @i</p>
}

@foreach (var name in names)
{
    <p>@name</p>
}

@code {
    private int testNum = 10;

    private List<string> names = new();

    protected override void OnInitialized()
    {
        names = new List<string>
        {
            "value 01",
            "value 02",
            "value 03",
            "value 04",
            "value 05",
            "value 06",
            "value 07",
            "value 08",
            "value 09"
        };
    }
}
