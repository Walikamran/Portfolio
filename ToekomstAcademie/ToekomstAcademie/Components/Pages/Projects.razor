@page "/projects"

<PageTitle>My Projects</PageTitle>

<section class="projects-header">
    <div class="container">
        <h1>My <span class="highlight">Projects</span></h1>
        <p class="subtitle">A collection of my recent work and creations</p>
    </div>
</section>

<section class="projects-container">
    <div class="container">
        <div class="project-grid">
            @foreach (var project in Projectslist)
            {
                <div class="project-card">
                    <div class="project-image">
                        <img src="@project.ImageUrl" alt="@project.Title" />
                        <div class="project-tag">@project.Category</div>
                    </div>
                    <div class="project-content">
                        <h3>@project.Title</h3>
                        <p>@project.Description</p>
                        <div class="project-tech">
                            @foreach (var tech in project.Technologies.Take(3))
                            {
                                <span>@tech</span>
                            }
                        </div>
                        <div class="project-links">
                            @if (!string.IsNullOrEmpty(project.LiveUrl))
                            {
                                <a href="@project.LiveUrl" target="_blank" class="btn btn-primary">
                                    <i class="fas fa-external-link-alt"></i> Live Demo
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(project.CodeUrl))
                            {
                                <a href="@project.CodeUrl" target="_blank" class="btn btn-secondary">
                                    <i class="fab fa-github"></i> View Code
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

